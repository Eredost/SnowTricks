<template id="js-trick-card">
    <div class="trick-card">

        <a href="{{ asset('uploads/figure-placeholder.jpg') }}" class="trick-card__image trick__link">
            <img src="{{ asset('uploads/figure-placeholder.jpg') }}" alt="">
        </a>

        <div class="trick-card__body">
            <h3 class="trick-card__name">
                <a href="#" class="trick__link"></a>
            </h3>

            {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                <div class="trick-card__actions">

                    <a href="{{ path('trick_edit', {'slug': 'slug'}) }}" class="trick-card__edit">
                        <i class="fa fa-pencil" aria-hidden="true"></i>
                    </a>

                    <form action="{{ path('trick_delete', {'slug': 'slug'}) }}" method="post" class="trick-card__delete" onsubmit="return confirm('Etes-vous sÃ»r de vouloir supprimer cette figure ?')">
                        <input type="hidden" name="_method" value="DELETE">
                        <input type="hidden" name="_csrf_token" value="{{ csrf_token('trick-delete') }}">
                        <button type="submit">
                            <i class="fa fa-trash" aria-hidden="true"></i>
                        </button>
                    </form>
                </div>
            {% endif %}
        </div>
    </div>
</template>
