{% extends 'base.html.twig' %}

{% block title %}Erreur 404{% endblock %}

{% block body %}
    <section class="exception">
        <div class="exception__wrapper">
            <h2 class="exception__title">Page non trouvée</h2>
            <p class="exception__description">
                {{ exception.getMessage() }}<br>
                Retour à la <a href="{{ path('homepage') }}">page d'accueil</a>
            </p>
        </div>
    </section>
{% endblock %}
